<h1 align="center">Listing Articles</h1>
<p>
  <%= link_to "New", new_article_path, class: "btn btn-success" %>
</p>
<table class="table">
  <tr>
    <thead>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
  </thead>
  </tr>
      <% @articles.each do |article| %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>
              <%= link_to 'Edit', edit_article_path(article), class: "btn btn-default" %>
              <%= link_to 'Show', article_path(article), class: "btn btn-primary" %>
              <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are u sure ?"}, class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
</table>